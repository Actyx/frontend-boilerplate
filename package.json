{
  "name": "end-to-end-testing-actyx-websites",
  "version": "1.0.0",
  "scripts": {
    "build:start": "http-server -p 8081 ./build/project",
    "build": "webpack --mode production --output build/project/bundle.js",
    "check": "npm run tsc && npm run lint && npm run test",
    "clean": "shx rm -rf dist && shx rm -rf build && shx rm -rf coverage",
    "cy:verify": "cypress verify",
    "dep": "depcheck",
    "cy:ci": "npm run cy:verify && start-server-and-test build:start 8081 cy:run",
    "cy:open": "cypress open",
    "cy:run": "cypress run --headless --browser chrome",
    "lint:fix": "tsc & eslint './src/**/*.{js,ts,tsx}' --fix & prettier './src/**/*.{js,ts,tsx}' --write",
    "lint": "tsc & eslint './src/**/*.{js,ts,tsx}' & prettier './src/**/*.{js,ts,tsx}' --check",
    "sloc": "sloc ./ --exclude 'node_modules|dist|build|.loki|assets|coverage|/.(storyshot)'",
    "start": "webpack-dev-server --mode development --open --hot",
    "test:watch": "tsc && jest --watch --coverage false",
    "test": "tsc && jest",
    "tsc:watch": "tsc --watch --pretty",
    "tsc": "tsc",
    "links:check:prod:developer": "ts-node ./src/check-links.ts prod developer",
    "links:check:prod:main": "ts-node ./src/check-links.ts prod main",
    "links:check:prod:download": "ts-node ./src/check-links.ts prod download",
    "links:check:prod": "npm run links:check:prod:developer && npm run links:check:prod:main && links:check:prod:download"
  },
  "dependencies": {
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@bahmutov/add-typescript-to-cypress": "^2.1.2",
    "@cypress/webpack-preprocessor": "^5.4.1",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "babel-loader": "^8.1.0",
    "broken-link-checker": "^0.7.8",
    "cypress": "^5.0.0",
    "depcheck": "^0.9.2",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.2",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "file-loader": "^6.0.0",
    "http-server": "^0.12.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "shelljs": "^0.8.4",
    "shx": "^0.3.2",
    "sloc": "^0.2.1",
    "start-server-and-test": "^1.11.0",
    "ts-jest": "^26.1.1",
    "ts-loader": "^8.0.1",
    "ts-node": "^9.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}